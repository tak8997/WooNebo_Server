<div class="form-group">
    <label class="col-sm-2 control-label">Image</label>
    <div class="col-sm-8">
    <% if (kiosk.image) { %>
        <image class="kiosk-img" id="kiosk-img" src="<%= kiosk.image %>" alt="등록하려면 클릭하세요" />
    <% } else { %>
        <image class="kiosk-img" id="kiosk-img" alt="등록하려면 클릭하세요" />
    <% } %>
        <input type="text" id="kiosk-img-path" value="<%= kiosk.image %>" name="image" />
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Serial</label>
    <div class="col-sm-8">
        <input class="form-control" type="text" name="serial" placeholder="kiosk serial (mac address)" value="<%= kiosk.serial %>"/>
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8">
        <textarea class="form-control" type="text" name="description" placeholder="kiosk description"><%= kiosk.description %></textarea>
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Location</label>
    <div class="col-sm-8">
        <input class="form-control" type="number" step="0.000001" name="lat" min="-90" max="90" placeholder="latitude" value="<%= kiosk.lat %>" />
        <input class="form-control" type="number" step="0.000001" name="lng" min="-180" max="180" placeholder="longitude" value="<%= kiosk.lng %>" />
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">BLE</label>
    <div class="col-sm-8">
        <input class="form-control" name="ble" placeholder="BLE" value="<%= kiosk.ble %>" />
    </div>
    <div class="col-sm-2"></div>
</div>
